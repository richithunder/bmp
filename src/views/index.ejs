<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>

        <link rel="stylesheet" href="/css/home.css" />
        <title>Pagina de bienvenida</title>
</head>

<body>
    <%- include("./partials/header.ejs") %>

        <section id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="img/banner-1.jpg" class="d-block w-100" alt="slider1">
                </div>
                <div class="carousel-item">
                    <img src="img/banner-2.jpg" class="d-block w-100" alt="slider2">
                </div>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previo</span>
    </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Siguiente</span>
    </button>
        </section>

        <main class="bg-white mt-4">
            <div class="container">
                <h2>Novedades</h2>
                <div class="row">

                    <% newProducts.forEach(product => { %>
                        <article class="cont-card col-md-3 col-sm-6">
                            <div class="card m-2">
                                <a href="../../products/detail/<%= product.id %>">
                                    <div class="box-img">
                                        <img class="article-img" src="/img/articulos/<%=product.productImages%>">
                                    </div>
                                </a>
                                <div class="card-body card-description">

                                    <div class="d-flex justify-content-around">
                                        <% console.log("productos favoritos", locals.productosFavoritos) %> 
                                        <% if (locals.userLogged) { %>
                                         
                                        
                                            <% if(locals.productosFavoritos &&
                                            productosFavoritos.filter(x=>
                                            x.product_id==product.id).length== 0){ %>
                                            <a href="/products/favoritos/<%= product.id %>"
                                            ><i class="icon-card fa-regular fa-heart fa-2x"></i
                                            ></a>
                                            <% } else{ %>
                                            <i
                                            class="icon-card fa-solid fa-heart fa-2x selectFavorite"
                                            ></i>
                                            <% } %>
                                        <% } else{ %>
                                            <a href="/products/favoritos/<%= product.id %>"
                                            ><i class="icon-card fa-regular fa-heart fa-2x"></i
                                            ></a>
                                        <% } %>
                                        <p class=" card-price ">$
                                            <%=product.price%>
                                        </p>
                                        <p class="card-discount ">10% off</p>

                                    </div>
                                    <div class="sub-card position-relative">
                                        <h3 class="card-title ">
                                            <a href="../../products/detail/<%= product.id %>">
                                                <%=product.productName%>
                                            </a>
                                        </h3>
                                    </div>

                                </div>
                            </div>
                        </article>
                        <% }) %>







                            <div class="d-flex"> <a href="/products/"><button type="button" class="btn btn-dark  btn-mas-productos ">Ver mas productos</a></button>
                            </div>
                </div>
            </div>

            <div class="container">
                <h2>Los mejores precios</h2>
                <div class="row">
                    <% cheapProducts.forEach(product => { %>
                        <article class="cont-card col-md-3 col-sm-6">
                            <div class="card m-2">
                                <a href="../../products/detail/<%= product.id %>">
                                <div class="box-img">
                                    <img class="article-img" src="/img/articulos/<%=product.productImages%>">
                                </div>
                            </a>
                                <div class="card-body card-description">

                                    <div class="d-flex justify-content-around">
                                    <% if (locals.userLogged) { %>
                                         
                                        
                                         <% if(locals.productosFavoritos &&
                                         productosFavoritos.filter(x=>
                                         x.product_id==product.id).length== 0){ %>
                                         <a href="/products/favoritos/<%= product.id %>"
                                         ><i class="icon-card fa-regular fa-heart fa-2x"></i
                                         ></a>
                                         <% } else{ %>
                                         <i
                                         class="icon-card fa-solid fa-heart fa-2x selectFavorite"
                                         ></i>
                                         <% } %>
                                     <% } else{ %>
                                         <a href="/products/favoritos/<%= product.id %>"
                                         ><i class="icon-card fa-regular fa-heart fa-2x"></i
                                         ></a>
                                     <% } %>
                                        <p class=" card-price ">$
                                            <%=product.price%>
                                        </p>
                                        <p class="card-discount ">10% off</p>

                                    </div>
                                    <div class="sub-card position-relative">
                                        <h3 class="card-title ">
                                            <a href="../../products/detail/<%= product.id %>">
                                                <%=product.productName%>
                                            </a>
                                        </h3>
                                    </div>

                                </div>
                            </div>
                        </article>
                        <% }) %>
                </div>


            </div>
            </div>
        </main>

        <section class="video-consulta bg-black p-5">
            <div class="container"> <video src="/videos/videobpm.mp4" loop="true" autoplay="autoplay" muted controls></video></div>
            <div class="container" id="contenedor-formulario">
                <h2 class="titulo-formulario text-center mb-2 celeste-vpm">Dejanos tu consulta</h2>
                <form action="">
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" placeholder="nombre@ejemplo.com">
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" id="consulta" rows="3" placeholder="No dudes en consultarnos!"></textarea>
                    </div>
                    <div class="d-flex justify-content-center"> <button type="submit" class=" btn btn-outline-info ">Enviar consulta</button>
                </form>
                </div>
        </section>
        <%- include("./partials/footer.ejs") %>



</body>

</html>